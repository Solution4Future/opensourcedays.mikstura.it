- i18n_scope = [:schedule, day]

%div.tab-pane.wo-tab-pane.fade.in{id: day, class: active}
  .span12
    %section.timeline.toggle-shortcode.toggles
      - @talks[day].each do |talk|
        - speaker = @speakers.find {|speaker| speaker.name == talk.speaker} || @team.find {|team_member| team_member.name == talk.speaker}
        %article.event{class: "#{talk.type}"}
          .timeline-icon
            .timeline-icon-container
              = icon_by_type(talk.type)
          .time-box
            %time= talk.start_at
          .timeline-content
            .event-content
              .toggle-item-title.event-title{"data-count" => "1"}
                %h3= talk.title
                %h4= speaker.name if speaker
              .toggle-item-body{:style => "display: none;"}
                - if speaker
                  %p.span8
                    = talk.description
                  %p.span2.center
                    %center
                      .photo-wrap
                        %img{:alt => speaker.name, :src => "/assets/speakers/#{speaker.picture}", width: '100px'}
                - else
                  %p= talk.description
